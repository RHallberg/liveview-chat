<p>Currently chatting in <strong> <%= @room_name %> </strong></p>


<div id="chat-container">
  <div id="chat-messages" phx-update="append">
    <%= for message <- @messages do %>
      <p id={"msg-#{@nbr_messages}"} class="message"><%= message %></p>
      <hr id={"hr-#{@nbr_messages}"}>
    <% end %>
  </div>

  <%= f = form_for :chat, "#", id: "chat-form", phx_submit: :submit_message%>
    <%= text_input f, :message, placeholder: "Enter message" %>
</div>
